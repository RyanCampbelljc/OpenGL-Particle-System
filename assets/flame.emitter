<!--//todo add a property to denote the spawn location(point, area, volume etc)-->
<emitter name="flame" num_particles="2000" duration="10000.0" type="continuous" spawn_rate="60">
    <spawn_properties>
        <random_property name="color" type="vec4">
            <min>
                <x>1</x>
                <y>0.15</y>
                <z>0</z>
                <w>1</w>
            </min>
            <max>
                <x>1</x>
                <y>0.90980</y>
                <z>0.03137</z>
                <w>1</w>
            </max>
        </random_property>
        
        <random_property name="velocity" type="vec3">
            <min>
                <x>0</x>
                <y>.5</y>
                <z>0</z>
            </min>
            <max>
                <x>0</x>
                <y>.5</y>
                <z>0</z>
            </max>
        </random_property>

        <random_property name="size" type="float">
            <min>0.05</min>
            <max>0.1</max>
        </random_property>

        <random_property name="lifetime" type="float">
            <min>3</min>
            <max>3</max>
        </random_property>
        
        <!--number between 0,1 -->
        <const_property name="fade" type="float" mode="out">
            0.9
        </const_property>
    </spawn_properties>

    <affectors>
        <affector type="velocity"/>
        <affector type="fade"/>

        <affector type="scale">

        </affector>
    </affectors>


</emitter>